{% extends 'publicLayout.html.twig' %}

{% block content %}

    <section class="mb-4">

        <h2 class="h1-responsive font-weight-bold text-center my-4">Contactez-nous !</h2>
        <p class="text-center w-responsive mx-auto mb-5">Vous avez des questions ? N'hésitez pas à nous contacter. Notre équipe reviendra rapidement vers vous.</p>

        <div class="row">

            <div class="col-md-7 col-sm-10 mb-md-0 mb-5 mx-auto">
                <form id="contact-form" name="contact-form" action="thanks" method="POST">

                    <div class="row">

                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <label for="name" class="">Votre nom :</label>
                                <input type="text" id="name" name="name" class="form-control">
                                {% if error.name is defined %}
                                    <p class="text-danger">{{ error.name }}</p>
                                {% endif %}

                            </div>
                        </div>
                        </div>


                        <div class="col-md-6">
                            <div class="md-form mb-0 mt-3">
                                <label for="email" class="">Votre adresse email :</label>
                                <input type="text" id="email" name="email" class="form-control">
                                {% if error.email1 is defined %}
                                   <p class="text-danger">{{ error.email1 }}</p>
                                {% endif %}
                                {% if error.email2 is defined %}
                                    <p class="text-danger">{{ error.email2 }}</p>
                                {% endif %}
                            </div>
                        </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form mb-0 mt-3">
                                <label for="subject" class="">Sujet :</label>
                                <input type="text" id="subject" name="subject" class="form-control">
                                {% if error.subject is defined %}
                                   <p class="text-danger">{{ error.subject }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12">

                        <div class="md-form mt-3">
                            <label for="message">Votre message :</label>
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
                            {% if error.message is defined %}
                               <p class="text-danger">{{ error.message }}</p>
                            {% endif %}

                        </div>
                    </div>

                </form>

                <div class="text-md-left my-4 mt-3">
                    <a class="btn btn-primary" onclick="document.getElementById('contact-form').submit();">Envoyer</a>
                </div>
                <div class="status"></div>
            </div>
            <div class="col-md-3 text-center">
                <ul class="list-unstyled mb-0">
                    <li><i class="fas fa-map-marker-alt fa-2x"></i>
                        <p>51, cours de Verdun</p>
                        <p>33000 BORDEAUX</p>
                    </li>

                    <li><i class="fas fa-phone mt-4 fa-2x"></i>
                        <p>+ 01 234 567 69</p>
                    </li>

                    <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                        <p>contact@parthub.com</p>
                    </li>
                </ul>
            </div>

        </div>

    </section>

{% endblock %}



