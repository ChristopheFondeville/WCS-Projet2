{% extends 'layout.html.twig' %}

{% block title %}PartHub - Add Party{% endblock %}

{% block content %}
<form action="" method="post" enctype="multipart/form-data">
    <div class="card mt-4 col-lg-12">
    <h5 class="bg-orange text-center rounded">Informations soirée</h5>
    <div class="card-body">
        <p class="card-text">
            <div class="form-group">
                <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="title">Titre de la soirée :</label>
                            <input type="text" class="form-control" id="title" name="title" value="{{party.title}}">
                            {% if errors.title is defined %}
                                <p class="text-danger">{{ errors.title }}</p>
                            {% endif %}
                        </div>
                        <div class="form-group col-md-6">
                            <label for="theme">Thème de la soirée :</label>
                            <input type="texte" class="form-control" id="theme" name="theme" value="{{ party.theme }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="date">Date de la soirée :</label>
                        <div class="d-flex d-row"><input style="width: 10em" type="date" class="form-control" id="date" name="date" onfocus="(this.type='date')" onblur="(this.type='text')" value="{{ party.date }}"><input type="time" id="time" name="time"></div>
                        {% if errors.date is defined %}
                            <p class="text-danger">{{ errors.date }}</p>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="address">Adresse de la soirée :</label>
                        <input type="text" class="form-control" id="address" name="address" value="{{ party.address }}">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="city">Ville :</label>
                            <input type="text" class="form-control" id="city" name="city" value="{{ party.city }}">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="zip">Code postal :</label>
                            <input type="text" class="form-control" id="zip" name="zip" value="{{ party.zip }}">
                            {% if errors.zip is defined %}
                                <p class="text-danger">{{ errors.zip }}</p>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                    </div>
            </div>
    </div>
    </div>

    <div class="card mt-4 col-lg-12">
    <h5 class="bg-orange text-center rounded">Description</h5>
        <div class="card-body">

                    <label for="description"></label>
            <input type="text" class="form-control" id="description" name="description" value="{{ party.description }}">
            <br>
            <label for="file">Photo de couverture :</label>
            <input type="file" id="picture" name="picture">
            {% if errors.picture is defined %}
                <p class="text-danger">{{ errors.picture }}</p>
            {% endif %}
         </div>
    </div>

    <div class="card mt-4 col-lg-12">
    <h5 class="bg-orange text-center rounded">Playlist</h5>
    <div class="card-body">
        <p class="card-text">

        <div class="form-group">
                <label for="playlist"></label>
            <img src="/assets/images/spotify.png" class="img-fluid text-center" alt="Responsive image" width="10%"> <input type="text" class="form-control" id="playlist" name="playlist_url" value="{{ party.playlist_url }}">
            {% if errors.playlist_url is defined %}
                <p class="text-danger">{{ errors.playlist_url }}</p>
            {% endif %}
        </div>

        <div class="d-flex justify-content-end"> <input type="submit" value="Modifier soirée" class="btn btn-outline-success"></div>

    </div>
    </div>
</form>
{% endblock %}


